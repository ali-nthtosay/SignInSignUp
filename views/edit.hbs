<h2>Update the movies</h2>
<hr />

<div>
  <form method="POST" action="/profile/edit/{{movieToEdit._id}}">

    <div>
      <label>Title: </label>
      <input name="Title" type="text" value="{{movieToEdit.Title}}" />
    </div>

    <div>
      <label>Actors: </label>
      <input name="Actors" type="text" value="{{movieToEdit.Actors}}" />
    </div>

    <div>
      <label>Image</label>
      <input name="Image" type="text" value="{{movieToEdit.Image}}" />
    </div>

    <button type="submit">edit</button>

  </form>

  <form method="POST" action="/profile/delete/{{movieToEdit._id}}">
    <button type="submit">Delete</button>
  </form>
</div>